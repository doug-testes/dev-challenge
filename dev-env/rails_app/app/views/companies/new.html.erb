<div class="main-content">

  <div clas="row">


<div class="col-12 col-md-10 offset-md-1 col-lg-10 offset-lg-1">

            <div class="card card-primary">
              <div class="row m-0">
                <div class="col-12 col-md-12 col-lg-5 p-0">
                  <div class="card-header text-center"><h4>Dados da empresa</h4></div>
                  <div class="card-body">
                    <%= form_with(model: @company, local: true, url: borrower_request_companies_path) do |form| %>

                      <div class="form-group floating-addon">
                        <%= form.label :cnpj %>
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <div class="input-group-text">
                              <i class="far fa-building"></i>
                            </div>
                          </div>
                          <%= form.text_field :cnpj, class: "form-control cnpj-field", placeholder: true, required: true, autofocus: true %>
                        <%= bootstrap_errors_list(@company, :cnpj) %>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= form.label :name %>
                        <div class="input-group">
                          <%= form.text_field :name, class: "form-control", placeholder: true, required: true %>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= form.label :phone %>
                        <div class="input-group">
                          <%= form.text_field :phone, class: "form-control phone-field", placeholder: true, required: true %>
                        </div>
                      </div>
                    
                  </div>  
                </div>
                <div class="col-12 col-md-12 col-lg-7 p-0">
                  <div class="card-header text-center"></div>
                  <%= form.fields_for :address do |address_form| %>
                  <div class="card-body">
                      <div class="form-row">
                        <div class="form-group floating-addon col-md-6">
                          <%= address_form.label :postal_code %>
                          <div class="input-group">
                            <div class="input-group-prepend">
                              <div class="input-group-text">
                                <i class="fas fa-map-marker-alt"></i>
                              </div>
                            </div>
                            <%= address_form.text_field :postal_code, class: "form-control cep-field", placeholder: true, required: true %>
                          </div>
                        </div>

                      <div class="form-group col-md-6">
                        <%= address_form.label :street %>
                        <div class="input-group">
                          <%= address_form.text_field :street, class: "form-control street", placeholder: true, required: true %>
                        </div>
                      </div>

                      </div>

                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <%= address_form.label :number %>
                        <div class="input-group">
                          <%= address_form.text_field :number, class: "form-control number", placeholder: true %>
                        </div>
                      </div>

                      <div class="form-group col">
                        <label>Complemento</label>
                        <%= address_form.label :complement %>
                        <div class="input-group">
                          <%= address_form.text_field :complement, class: "form-control", placeholder: true %>
                        </div>
                      </div>
                    </div>

                    <div class="form-row">

                      <div class="form-group col-md-6">
                        <%= address_form.label :neighbourhood %>
                        <div class="input-group">
                          <%= address_form.text_field :neighbourhood, class: "form-control neighbourhood", placeholder: true %>
                        </div>
                      </div>

                      <div class="form-group col-md-3">
                        <%= address_form.label :city %>
                        <div class="input-group">
                          <%= address_form.text_field :city, class: "form-control city", placeholder: true, required: true %>
                        </div>
                      </div>

                      <div class="form-group col-md-3">
                        <%= address_form.label :state %>
                        <div class="input-group">
                          <%= address_form.text_field :state, class: "form-control state", placeholder: true, required: true %>
                        </div>
                      </div>
                      <% end %>
                    </div>

                      <div class="form-group text-right">
                         <%= form.submit "Completar cadastro", class: "btn btn-round btn-lg btn-primary" %>
                      </div>
                    <% end %>
                  </div>  
                </div>
              </div>
            </div>
          </div>


  </div>
</div>
