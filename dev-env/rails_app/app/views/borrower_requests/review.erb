<div class="main-content">


<div class="row">
  <div class="col-12 col-md-6 col-lg-6 offset-md-3">
    <div class="pricing pricing-highlight">
      <div class="pricing-padding">
        <div class="pricing-price">
          <h2>Valor do emprestimo</h2>
          <h2><%= @borrower_request.loan_amount_to_currency %></h2>
        </div>

        <div class="pricing-details">
          <div class="pricing-item">
            <div class="pricing-item-label">Taxa de juros: <%= @borrower_request.percentage_rate %>% ao mês</div>
          </div>
          <div class="pricing-item">
            <div class="pricing-item-label">Parcelas: <%= @borrower_request.installments %></div>
          </div>
          <div class="pricing-item">
            <div class="pricing-item-label">Valor de cada parcela: <%= @borrower_request.installments_amount_to_currency %></div>
          </div>
          <div class="pricing-item">
            <div class="pricing-item-label">Valor final pago: <%= @borrower_request.total_amount_payable_to_currency %> </div>
          </div>
          <div class="pricing-item">
            <div class="pricing-item-label">Data de inicio e termino: <%= I18n.localize(@borrower_request.start_date)  %> a <%= I18n.localize(@borrower_request.end_date) %></div>
          </div>
        </div>
      </div>
      <div class="pricing-cta">
        <%= link_to(approve_borrower_request_path(@borrower_request), :method => :post) do %>
          Confirmar solicitação <i class="fas fa-arrow-right"></i>
        <% end %>
      </div>
    </div>
    <div class="mt-3 offset-5">
      <a href="/">Cancelar</a>
    </div>
  </div>
</div>