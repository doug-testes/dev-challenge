<div class="main-content">

  <div clas="row">
      <section class="section">
      <div class="container mt-2">
      <div class="invoice">
              <div class="invoice-print">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="invoice-title">
                      <h2>Emprestimo</h2>
                      <div class="invoice-number">#<%= @borrower_request.id %></div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-md-6">
                        <address>
                          <strong>Solicitante</strong><br>
                            <%= @borrower_request.company.name %><br>
                            <%= @borrower_request.company.cnpj %><br>
                            <%= @borrower_request.company.phone %><br>
                        </address>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <address>
                          <strong>Endereço:</strong><br>
                          <%= @borrower_request.company.address.resume_basic %> <br>
                        </address>
                      </div>
                      <div class="col-md-6 text-md-right">
                        <address>
                          <strong>Data da solicitação:</strong><br>
                          <%= I18n.localize(@borrower_request.created_at, :format => :short) %><br><br>
                        </address>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="row mt-4">
                  <div class="col-md-12">
                    <div class="section-title">Parcelas</div>
                    <div class="table-responsive">
                      <table class="table table-striped table-hover table-md">
                        <tbody><tr>
                          <th data-width="40" style="width: 40px;">#</th>
                          <th>Vencimento</th>
                          <th class="text-center">Taxa de juros</th>
                          <th class="text-center">Boleto</th>
                          <th class="text-right">Valor</th>
                        </tr>
                        <% @borrower_request.borrower_installments.each do | installment |%>
                          <tr>
                            <td><%= installment.installment_number %></td>
                            <td><%= l(installment.due_date) %></td>
                            <td class="text-center"><%= @borrower_request.percentage_rate %>%</td>
                            <td class="text-center"><a target="_blank" href="http://www.sicadi.com.br/mhouse/boleto/boleto3.php?numero_banco=341-7&local_pagamento=PAG%C1VEL+EM+QUALQUER+BANCO+AT%C9+O+VENCIMENTO&cedente=Microhouse+Inform%E1tica+S%2FC+Ltda&data_documento=04%2F11%2F2020&numero_documento=DF+00113&especie=&aceite=N&data_processamento=04%2F11%2F2020&uso_banco=&carteira=179&especie_moeda=Real&quantidade=&valor=&vencimento=04%2F11%2F2020&agencia=0049&codigo_cedente=10201-5&meunumero=00010435&valor_documento=260%2C00&instrucoes=Taxa+de+visita+de+suporte%0D%0AAp%F3s+o+vencimento+R%24+0%2C80+ao+dia&mensagem1=&mensagem2=&mensagem3=ATEN%C7%C3O%3A+N%C3O+RECEBER+AP%D3S+15+DIAS+DO+VENCIMENTO&sacado=&Submit=Enviar">Abrir boleto</td>
                            <td class="text-right"><%= installment.amount_to_currency %></td>
                          </tr>
                        <% end %>
                      </tbody></table>
                    </div>
                    <div class="row mt-4">
                      <div class="col-lg-8">
                      </div>
                      <div class="col-lg-4 text-right">
                        <hr class="mt-2 mb-2">
                        <div class="invoice-detail-item">
                          <div class="invoice-detail-name">Total</div>
                          <div class="invoice-detail-value invoice-detail-value-lg"><%= @borrower_request.total_amount_payable_to_currency %></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <hr>
              <div class="text-md-right">
                <button onclick="window.print();" class="btn btn-warning btn-icon icon-left btn-print"><i class="fas fa-print"></i>Imprimir</button>
              </div>
            </div>

            <div class="mt-3 offset-6">
              <a href="/">Voltar</a>
            </div>


      </div>
    </section>
  </div>
</div>
